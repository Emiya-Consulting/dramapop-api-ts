generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Drama {
  id              Int      @id @default(autoincrement())
  title           String   @unique
  year            Int
  averageRating   Float?
  cast            Actor[]
  thumbnailURL    String?
  description     String?
  countryOfOrigin String?
  seasons         Int?
  episodes        Int?
  createdOn       DateTime @default(now())
  modifiedOn      DateTime @updatedAt
  deleted         Boolean  @default(false)
}

model Actor {
  id           Int      @id @default(autoincrement())
  firstName    String?
  lastName     String
  dramas       Drama[]
  thumbnailURL String?
  createdOn    DateTime @default(now())
  modifiedOn   DateTime @updatedAt
  deleted      Boolean  @default(false)
}
